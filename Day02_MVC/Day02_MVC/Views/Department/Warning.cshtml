@model int

<h2>Warning</h2>
<p>Are you sure you want to delete this department? This action cannot be undone.</p>

<form method="post" asp-action="ConfirmDelete" asp-controller="Department">
	<input type="hidden" name="id" value="@Model" />
	<button type="submit" class="btn btn-danger">Yes, Delete</button>
	<a href="/Department/ShowAll" class="btn btn-secondary">Cancel</a>
</form>
