@model Department
<div asp-validation-summary="All" class="text-denger"> </div>

<form method="post" class="col-3" asp-controller="Department" asp-action="SaveEdit">
	<input type="hidden" asp-for="Id" />
	<div>
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="ManagerName"></label>
		<input asp-for="ManagerName" class="form form-control" />
		<span asp-validation-for="ManagerName" class="text-danger"></span>
	</div>
	<input type="submit" value="Save Changes" class="btn btn-success mt-3" />
</form>
<a asp-action="showAll">Cancel</a>
